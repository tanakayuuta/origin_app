<%#トップページのviewを担当%>

<% if signed_in? %> <%#ログイン済みの場合以下を表示する（ここから）%>
  <div class="row">
    <aside class="col-md-4"><%# asideは本文から外れた部分を意味する%>
      <section>
        <%= render 'shared/user_info' %><%#renderはよく使う部分や何度も使いたい部分を呼び出して利用するメソッド%>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="col-md-8">
      <h3>投稿履歴</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>　<%#ログイン済みの場合以下を表示する（ここまで）%>



<%#ログインしていない場合以下を表示する（ここから）%>
<div class="center jumbotron">
  <h1>あつまて(仮)</h1>

  <h2>
    フリー素材投稿サイトになる（予定）
  </h2>
  
  
<div class="input-group">
  <span class="input-group-btn">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    キーワード
  <span class="caret"></span>
  </button>
	  	<ul class="dropdown-menu" role="menu">
		  	<li><a href="#">キーワード</a></li>
			  <li><a href="#">タグ</a></li>
			  <li><a href="#">ユーザー</a></li>
	  	</ul>
     </span>
	<input type="text" class="form-control" placeholder="キーワードを入力して検索">
</div>
  
<br>
<br>

  <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-lg btn-primary" %>
</div>


<% end %><%#ログインしていない場合以下を表示する（ここまで）%>