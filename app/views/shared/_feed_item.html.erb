<%# homeのツイート履歴のviewを担当 %>

<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %><%# ツイート投稿者のプロフィールへ遷移 %>
    </span>
    
    <span class="content"><%= feed_item.content %></span>
    
    <% if feed_item.image? %>
    <div class="image">
      <%= image_tag feed_item.image, :size => '320x180' %>
    </div>
    <% end %>
    
    <span class="timestamp">
     <%= time_ago_in_words(feed_item.created_at) %>前に投稿
    </span>
    
  <% if current_user == feed_item.user %>
    <%= link_to "削除", feed_item, method: :delete,
                                     data: { confirm: "消しちゃって大丈夫ですか？" },
                                     title: feed_item.content %>
  <% end %>
</li>