<%# 自分のプロフィール画面のviewを担当%>
<% provide(:title, @user.name) %>
<div class="row">
  
  <aside class="col-md-4"><%# asideは本文から外れた部分を意味する%>
    <section><%# sectionは段落や章のまとまりを意味する%>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>簡単なbioとか入れられるといいかもね</p>
    </section>
  </aside>
  
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>これまでの投稿 (<%= @user.microposts.count %>ツイート)</h3><%# countで投稿数を表示%>
      <ol class="microposts">
        <%= render @microposts %><%#renderはよく使う部分や何度も使いたい部分を呼び出して利用するメソッド%>
      </ol>
      <%#olはOrdered Listの略で、順序のあるリストを表示する%>
      
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>