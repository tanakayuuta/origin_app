<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="field">
      <%= f.label :"メールアドレス" %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
    </div>
 
    <p>初めての方はこちらから <%= link_to "新規ユーザー登録", new_user_registration_path %></p>
  </div>
</div>
<% end %>
